{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "outDir": "./dist",
        "lib": ["ES2020"],

        "strict": true,
        "declaration": true,
        "removeComments": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/**/**/*.ts"],
    "exclude": ["dist", "node_modules"]
}